<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PersonasCRUDMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:PersonasCRUDMaui.Views"
    Title="PersonasCRUDMaui">

    <ShellContent
        Title="Listado"
        ContentTemplate="{DataTemplate views:ListadoPersonas}"
        Route="ListadoPersonas" />
    <ShellContent
        Title="Editar"
        ContentTemplate="{DataTemplate views:EditarPersona}"
        Route="EditarPersona" />
    <ShellContent
        Title="Agregar"
        ContentTemplate="{DataTemplate views:AgregarPersona}"
        Route="AgregarPersona" />

</Shell>
